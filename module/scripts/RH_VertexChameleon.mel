proc string
RH_FindOptionMenuItem_ByLabel(string $menu, string $label)
{
	string $result;
	string $items[] = `optionMenu -q -itemListLong $menu`;
	for ($item in $items)
	{
		if (`menuItem -q -label $item` == $label)
		{
			$result =  $item;
			break;
		}
	}
	return $result;
}

