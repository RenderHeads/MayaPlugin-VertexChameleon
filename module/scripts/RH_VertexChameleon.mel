global proc
RH_SetOptionMenuValue_ByAnnotation(string $menu, string $annotation)
{
	string $item = RH_FindOptionMenuItem_ByAnnotation($menu, $annotation);
	if (size($item)>0)
		optionMenu -e -value `menuItem -q -label $item` $menu;
	else
